<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Label:
                text: 'Student Search'
                font_size: '24sp'
                bold: True
            Button:
                text: 'Back'
                size_hint_x: 0.2
                on_release: root.manager.current = 'dashboard'

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10
            TextInput:
                id: search_input
                hint_text: 'Enter STU...'
                multiline: False
                size_hint_x: 0.7
            Button:
                text: 'Search'
                size_hint_x: 0.3
                on_release: root.perform_search()

        Label:
            id: status_label
            text: ''
            color: 1, 0, 0, 1
            size_hint_y: None
            height: '30dp'

        # Embed a summarized detail view here
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                id: search_results_container
