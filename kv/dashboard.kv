<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: 'Admin Dashboard'
            font_size: '28sp'
            bold: True
            size_hint_y: 0.15

        GridLayout:
            cols: 2
            spacing: 20
            size_hint_y: 0.7

            Button:
                text: 'Manage Batches'
                on_release: root.manager.current = 'batch_list'
            Button:
                text: 'Student Search'
                on_release: root.manager.current = 'search'
            Button:
                text: 'Payments'
                on_release: root.manager.current = 'payment'
            Button:
                text: 'Promotion'
                on_release: root.manager.current = 'promotion'
            Button:
                text: 'Reports'
                on_release: root.show_reports()
            Button:
                text: 'Settings'
                on_release: root.manager.current = 'settings'

        AnchorLayout:
            size_hint_y: 0.15
            Button:
                text: 'Logout'
                size_hint: (0.5, 0.6)
                background_color: (0.8, 0.2, 0.2, 1)
                on_release: root.logout()
