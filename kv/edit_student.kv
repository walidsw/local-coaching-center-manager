<EditStudentScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: 'Edit Student Details'
                font_size: '24sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1
            Button:
                text: 'Back'
                size_hint_x: 0.2
                on_release: root.go_back()

        ScrollView:
            size_hint_y: 0.9
            GridLayout:
                cols: 2
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True

                Label:
                    text: 'Student Name *'
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: name_input
                    multiline: False
                
                Label:
                    text: "Father's Name"
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: father_name_input
                    multiline: False

                Label:
                    text: "Mother's Name"
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: mother_name_input
                    multiline: False

                Label:
                    text: "Father's Mobile *"
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: father_mobile_input
                    multiline: False

                Label:
                    text: 'Alternative Mobile'
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: alt_mobile_input
                    multiline: False

                Label:
                    text: 'Class'
                    color: 0.2, 0.2, 0.2, 1
                Spinner:
                    id: class_input
                    text: 'Select Class'
                    values: ['Class 3', 'Class 4', 'Class 5', 'Class 6', 'Class 7', 'Class 8', 'Class 9', 'Class 10', 'Graduated']

                Label:
                    text: 'Section'
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: section_input
                    multiline: False

        AnchorLayout:
            size_hint_y: 0.15
            Button:
                text: 'Update Student'
                size_hint: 0.5, 0.8
                background_color: 0.1, 0.7, 0.2, 1
                bold: True
                on_release: root.update_student()
